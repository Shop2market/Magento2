<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">adcurve_connection_form.connection_form_data_source</item>
			<item name="deps" xsi:type="string">adcurve_connection_form.connection_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="config" xsi:type="array">
			<item name="dataScope" xsi:type="string">data</item>
			<item name="namespace" xsi:type="string">adcurve_connection_form</item>
		</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
		<item name="buttons" xsi:type="array">
			<item name="back" xsi:type="string">Adcurve\Adcurve\Block\Adminhtml\Connection\Edit\BackButton</item>
			<item name="delete" xsi:type="string">Adcurve\Adcurve\Block\Adminhtml\Connection\Edit\DeleteButton</item>
			<item name="save" xsi:type="string">Adcurve\Adcurve\Block\Adminhtml\Connection\Edit\SaveButton</item>
			<item name="save_and_continue" xsi:type="string">Adcurve\Adcurve\Block\Adminhtml\Connection\Edit\SaveAndContinueButton</item>
		</item>
	</argument>
	<dataSource name="connection_form_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Adcurve\Adcurve\Model\Connection\DataProvider</argument>
			<argument name="name" xsi:type="string">connection_form_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">connection_id</argument>
			<argument name="requestFieldName" xsi:type="string">connection_id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="submit_url" path="*/*/save" xsi:type="url"/>
				</item>
			</argument>
		</argument>
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
	</dataSource>
	<fieldset name="General">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="label" xsi:type="string"/>
			</item>
		</argument>
		<field name="connection_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">connection_id</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">10</item>
					<item name="dataScope" xsi:type="string">connection_id</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
					<item name="visible" xsi:type="boolean">false</item>
				</item>
			</argument>
		</field>
		<field name="store_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Store ID</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">20</item>
					<item name="dataScope" xsi:type="string">store_id</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
					<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
		</field>
		<field name="store_code">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Store code</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">30</item>
					<item name="dataScope" xsi:type="string">store_code</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="adcurve_shop_id">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Adcurve Shop ID</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">40</item>
					<item name="dataScope" xsi:type="string">adcurve_shop_id</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="adcurve_token">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Adcurve Token</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">50</item>
					<item name="dataScope" xsi:type="string">adcurve_token</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="enabled">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Enabled</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">60</item>
					<item name="dataScope" xsi:type="string">enabled</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="status">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Connection status</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">70</item>
					<item name="dataScope" xsi:type="string">status</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="suggestion">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Suggestion</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">90</item>
					<item name="dataScope" xsi:type="string">suggestion</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="api_user_info">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Api User Info</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">100</item>
					<item name="dataScope" xsi:type="string">api_user_info</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="updated_at">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Updated At</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Connection</item>
					<item name="sortOrder" xsi:type="number">110</item>
					<item name="dataScope" xsi:type="string">updated_at</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
	</fieldset>
</form>
